{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "timestreamTrustPolicy",
      "Effect": "Allow",
      "Principal": {
        "Service": "iotfleetwise.amazonaws.com"
      },
      "Action": "sts:AssumeRole",
      "Condition": {
        "StringEquals": {
          "aws:SourceArn": [
            "arn:aws:iotfleetwise:<region>:<account-id>:campaign/<campaign-name>"
          ],
          "aws:SourceAccount": [
            "<account-id>"
          ]
        }
      }
    }
  ]
}